<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MealTime1"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.MealTime1">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Add the declaration for MainMenuActivity -->
        <activity
            android:name=".MainMenuActivity"
            android:label="Main Menu"
            android:theme="@style/Theme.MealTime1" />

        <!-- Add the declaration for RegistrationActivity -->
        <activity
            android:name=".RegistrationActivity"
            android:label="Registration"
            android:theme="@style/Theme.MealTime1" />

        <!-- Add the declaration for GenerateMealActivity -->
        <activity
            android:name=".GenerateMealActivity"
            android:label="Generate Meal"
            android:theme="@style/Theme.MealTime1" />

        <!-- Add the declaration for GroceryListActivity -->
        <activity
            android:name=".GroceryListActivity"
            android:label="Grocery List"
            android:theme="@style/Theme.MealTime1" />

        <!-- Add the declaration for MyBookmarksActivity -->
        <activity
            android:name=".MyBookmarksActivity"
            android:label="My Bookmarks"
            android:theme="@style/Theme.MealTime1" />

        <!-- Add the declaration for MyAccountActivity -->
        <activity
            android:name=".MyAccountActivity"
            android:label="My Account"
            android:theme="@style/Theme.MealTime1" />

    </application>

</manifest>