<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".meal_results_fragment"
    android:background="@color/lettuce_green">


    <!-- TODO: Update blank fragment layout -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/mealRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="587dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="60dp"
        android:background="#FFFFFF"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_go_back"
        android:layout_width="174dp"
        android:layout_height="39dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="652dp"
        android:background="@drawable/button_shadow"
        android:gravity="center"
        android:text="Re-Generate My Meal"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/backButton" />

    <Button
        android:id="@+id/btn_save_meal"
        android:layout_width="99dp"
        android:layout_height="39dp"
        android:layout_marginStart="300dp"
        android:layout_marginTop="652dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/button_shadow"
        android:gravity="center"
        android:text="Save Meal"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_question_icon"
        android:layout_marginTop="657dp"
        android:layout_marginStart="15dp"
        android:id="@+id/questionButton1"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_question_icon"
        android:layout_marginTop="657dp"
        android:layout_marginStart="280dp"
        android:id="@+id/questionButton2"/>

</FrameLayout>