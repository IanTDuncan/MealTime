<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Back Button -->

    <!-- Button: Generate My Meal -->

    <!-- Button: Grocery List -->

    <!-- Button: My Bookmarks -->

    <!-- Button: My Account -->

    <Button
        android:id="@+id/buttonGenerateMeal"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="150dp"
        android:layout_marginTop="123dp"
        android:layout_marginEnd="150dp"
        android:layout_marginBottom="20dp"
        android:padding="16dp"
        android:text="Generate My Meal" />

    <Button
        android:id="@+id/buttonGroceryList"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonGenerateMeal"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="150dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="150dp"
        android:layout_marginBottom="20dp"
        android:padding="16dp"
        android:text="Grocery List" />

    <Button
        android:id="@+id/buttonMyBookmarks"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonGroceryList"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="150dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="150dp"
        android:layout_marginBottom="20dp"
        android:padding="16dp"
        android:text="My Bookmarks" />

    <Button
        android:id="@+id/buttonMyAccount"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonMyBookmarks"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="150dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="150dp"
        android:layout_marginBottom="20dp"
        android:padding="16dp"
        android:text="My Account" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="35dp"
        android:layout_marginBottom="20dp"
        android:text="@string/hyperlink"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="20dp"
        android:text="@string/hyperlink2"
        android:textSize="16sp" />

</RelativeLayout>